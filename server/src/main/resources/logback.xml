<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %X{call-id} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="trace">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOKI"/>
    </root>

    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.apache.kafka.clients.NetworkClient" level="OFF"/>
    <logger name="org.apache.kafka.clients.ClientUtils" level="OFF"/>
    <logger name="org.apache.kafka.common.network.Selector" level="OFF"/>
    <logger name="org.apache.kafka.clients.consumer.KafkaConsumer" level="OFF"/>
    <logger name="org.apache.kafka.clients.consumer.internals" level="OFF"/>
    <logger name="org.apache.kafka.common.metrics" level="OFF"/>

</configuration>